<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:textSize="18sp"
        android:paddingBottom="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_background">
        <ImageView
            android:id="@+id/mine_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/my_head"
            android:scaleType="centerCrop"
            android:layout_marginTop="27dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青春那样骚"
            android:textSize="16sp"
            android:textColor="@color/white_text"
            android:layout_below="@+id/mine_head_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
           <TextView
               android:id="@+id/mine_personal_information"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:text="个人信息"
               android:textColor="@color/wode_text"
               android:drawableLeft="@mipmap/my_personal_information"
               android:drawablePadding="7dp"
               android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_personal_information_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_message"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="消息"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/my_information"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_message_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="常用地址"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/my_address"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_address_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_set"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="设置"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/my_set"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_set_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_opinion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="意见反馈"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/my_opinion"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_opinion_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_consult"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="在线咨询"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/my_consult"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_consult_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_about"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="关于"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/my_about"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_about_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
    </LinearLayout>


</LinearLayout>