<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/top_back"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认订单"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="订单详情"
        android:textColor="#424141"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/confirm_an_order_details"
        android:drawablePadding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务项目：家居清洁"
        android:textSize="11dp"
        android:textColor="#424141"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重庆市沙坪坝区小龙坎正街嘉福苑3幢2单元204"
        android:textSize="11dp"
        android:textColor="#424141"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:drawableRight="@mipmap/right"
        android:gravity="center_vertical"
        android:layout_marginBottom="19dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="订单详情"
        android:textColor="#424141"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/shizhong"
        android:drawablePadding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务时间：10-22（周六）17:30-19:30"
        android:textSize="11dp"
        android:textColor="#424141"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实际价格：￥60.00"
        android:textSize="11dp"
        android:textColor="#424141"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"

        android:gravity="center_vertical"
        android:layout_marginBottom="19dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="14dp"
        android:background="@drawable/button"
        android:layout_marginTop="134dp"
        />




</LinearLayout>