<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#000000">
        <ImageView
            android:id="@+id/img_about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/top_back"
            android:layout_gravity="center"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关于"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/my_background"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_about_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/about_item_circle"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V.0.1.1"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>


    </LinearLayout>
    <TextView
        android:id="@+id/textview_about_fuction"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="功能介绍"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="14sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#8a8a8a"/>
    <LinearLayout
        android:id="@+id/linear_about_inform"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:text="系统通知"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:padding="10dp"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/inform_gray"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#8a8a8a"/>
    <LinearLayout
        android:id="@+id/linear_about_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="版本更新"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="34dp"
            android:layout_height="16dp"
            android:text="New"
            android:textColor="#ffffff"
            android:background="@drawable/feedback_item_blue"
            android:textSize="12sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="V.0.1.2"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textColor="#8a8a8a"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#8a8a8a"/>
    </LinearLayout>
    <TextView
        android:id="@+id/banbenhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright 2009-2016 无忧家政.All Rights Reserved"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/banbenhao"
        android:text="使用条款和隐私政策"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>
