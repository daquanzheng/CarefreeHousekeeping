<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/top_back"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:textSize="18dp"

            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="服务时长"
            android:textSize="14dp"
            android:textColor="#424141"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="13dp"
            android:drawableLeft="@mipmap/shizhong"
            android:drawablePadding="7dp"
            />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:text="一"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:gravity="center"
            />
        <TextView
            android:layout_width="51dp"
            android:layout_height="23dp"
            android:text="2小时"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:textSize="11dp"
            android:gravity="center"

            />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:text="十"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:gravity="center"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="13dp"
        android:drawableLeft="@mipmap/shizhong"
        android:textSize="14dp"
        android:textColor="#424141"
        android:text="开始时间"
        android:drawablePadding="7dp"
        android:layout_marginBottom="17dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="月\t\t\t份:"
            android:textSize="14dp"
            android:textColor="#424141"
            android:layout_marginTop="22dp"

            android:layout_marginLeft="35dp"
            android:drawablePadding="7dp"
            />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:text="一"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:gravity="center"
            />
        <TextView
            android:layout_width="51dp"
            android:layout_height="23dp"
            android:text="10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:textSize="11dp"
            android:gravity="center"

            />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:text="十"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="日\t\t\t期:"
            android:textSize="14dp"
            android:textColor="#424141"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:text="一"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:gravity="center"
            />
        <TextView
            android:layout_width="51dp"
            android:layout_height="23dp"
            android:text="22"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:textSize="11dp"
            android:gravity="center"

            />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:text="十"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:gravity="center"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="具体时间:"
            android:textSize="14dp"
            android:textColor="#424141"
            android:layout_marginLeft="35dp"
            />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:text="一"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:gravity="center"
            />
        <TextView
            android:layout_width="51dp"
            android:layout_height="23dp"
            android:text="8:00"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:textSize="11dp"
            android:gravity="center"

            />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:text="十"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuyue"
            android:gravity="center"
            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="#E6E6E6"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp"
        android:text="地\t\t址：重庆市沙坪坝区小龙坎正街嘉福苑3幢2单元204"
        android:textSize="11dp"
        android:textColor="#424141"
        android:drawableLeft="@mipmap/my_address"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/right"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        />

    <Button
        android:id="@+id/li_ji_yu_yue_button"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="立即预约"
        android:textColor="#fff"
        android:textSize="14dp"
        android:background="@drawable/button"
        android:layout_marginTop="88dp"
        />


</LinearLayout>