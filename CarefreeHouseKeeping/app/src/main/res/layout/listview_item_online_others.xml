<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_others_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/personal_head"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textview__others_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南国"
        android:textColor="#8a8a8a"
        android:textSize="13sp"
        android:layout_alignTop="@id/img_others_head"
        android:layout_toRightOf="@id/img_others_head"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#8a8a8a"
        android:textSize="15sp"
        android:text="曾经有一段真挚的爱情摆在我的面前,我没有珍惜知道失去后才后悔莫及，如果上天能给我一次重来的机会，我会对那个女孩说三个字，借点钱"
        android:layout_toRightOf="@id/img_others_head"
        android:layout_below="@id/textview__others_name"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
