<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.micro.android316.housekeeping.utils.Topbar
        android:id="@+id/set_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TopBarBg"
        custom:leftImg="@mipmap/top_back"
        custom:rightTextColor="@color/white_text"
        custom:title="设置"
        custom:titleTextColor="@color/white_text"
        custom:titleTextSize="6sp"
        android:layout_alignParentTop="true"
        android:padding="5dp">
    </com.micro.android316.housekeeping.utils.Topbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_personal_information"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="分享给好友"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/set_share"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_personal_information_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_message"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="清除缓存"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/set_clear"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/mine_message_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88.9M"
                android:layout_gravity="center_vertical"
                android:textColor="#BFBFBF"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="我的收藏"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/set_collect"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_address_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_set"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="修改密码"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/set_change"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_set_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/set_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="绑定手机"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/set_phone"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/set_phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_consult"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="推送消息提醒方式"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/set_remind"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_consult_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_about"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="退出登录"
                android:textColor="@color/wode_text"
                android:drawableLeft="@mipmap/set_detrusiondetrusion"
                android:drawablePadding="7dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/mine_about_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_arrows"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wode_space"
            ></View>
    </LinearLayout>

</LinearLayout>