<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="13dp"
            android:paddingTop="10dp"


            >
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_recommend_pc"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    >
                    <LinearLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张淑芬"
                            android:textColor="@color/txt_deep"
                            android:textSize="14dp"
                            />
                        <TextView
                            android:id="@+id/age"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="30岁"
                            android:textColor="@color/txt_deep"
                            android:layout_marginLeft="10dp"
                            android:textSize="14dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/home_recommend_star"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="从业时间：8年"
                        android:textSize="10dp"
                        android:textColor="@color/txt_normal"
                        android:layout_marginTop="7dp"
                        android:id="@+id/wk_time"
                        />
                    <TextView
                        android:id="@+id/wk_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作范围：家居保洁、婴幼儿护理"
                        android:textSize="10dp"
                        android:textColor="@color/txt_normal"
                        android:layout_marginTop="7dp"
                        />
                    <TextView
                        android:id="@+id/js"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="她真诚、专业的服务感染着用户全家人，让用户能够安心地工作，不为家事分心。张阿姨是一个不可多得的好阿姨。她真诚..."
                        android:textSize="10dp"
                        android:textColor="@color/txt_list"
                        android:layout_marginTop="11dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_marginTop="7dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/gz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2563"
                    android:drawableLeft="@mipmap/home_browse"
                    android:drawablePadding="7dp"
                    android:textColor="@color/txt_list"
                    android:textSize="9dp"
                    />


                <TextView
                    android:id="@+id/pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2563"
                    android:drawableLeft="@mipmap/home_comment"
                    android:drawablePadding="7dp"
                    android:textColor="@color/txt_list"
                    android:textSize="9dp"
                    android:layout_marginLeft="22dp"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2563"
                    android:drawableLeft="@mipmap/home_love"
                    android:drawablePadding="7dp"
                    android:textColor="@color/txt_list"
                    android:textSize="9dp"
                    android:layout_marginLeft="22dp"
                    />
            </LinearLayout>



        </LinearLayout>


</LinearLayout>
