<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <com.micro.android316.housekeeping.utils.Topbar
        android:id="@+id/personal_information_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TopBarBg"
        custom:leftImg="@mipmap/top_back"
        custom:rightText="保存"
        custom:rightTextColor="@color/white_text"
        custom:rightTextSize="5sp"
        custom:title="个人信息"
        custom:titleTextColor="@color/white_text"
        custom:titleTextSize="6sp"
        android:layout_alignParentTop="true"
        android:padding="5dp">
    </com.micro.android316.housekeeping.utils.Topbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/personal_background">
        <ImageView
            android:id="@+id/personal_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/personal_head"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/personal_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/注册"
            android:layout_below="@+id/personal_head_img"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/white_text"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/personal_head_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钢琴间的黑白，夹着永不忘的情"
            android:layout_below="@+id/personal_head_title"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:textColor="@color/white_text"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账        号"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:hint="123456789"
            android:textColorHint="@color/wode_text"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生        日"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:hint="1995年11月19日"
            android:inputType="date"
            android:textColorHint="@color/wode_text"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选填"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮        箱"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:hint="123456789@qq.com"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/wode_text"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选填"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身  份  证"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:hint="******************"
            android:inputType="numberPassword"
            android:maxLength="18"
            android:textColorHint="@color/wode_text"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="必填"
            android:textColor="#1598ce"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册时间"
            android:layout_gravity="center_vertical"
            android:textColor="@color/wode_text"
            android:padding="1dp"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:hint="2016-10-17"
            android:inputType="date"
            android:textColorHint="@color/wode_text"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wode_space"></View>

</LinearLayout>